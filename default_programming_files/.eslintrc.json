{
  "env": {
    "browser": true
  },
  "extends": ["eslint:all", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "capitalized-comments": "off",
    "multiline-comment-style": "off",
    "no-magic-numbers": "warn",
    "no-console": "off",
    "no-unused-vars": 1,
    "no-var": "warn",
    "one-var": ["warn", "never"],
    "prefer-const": "warn",
    "radix": "as-needed",
    "strict": ["warn", "global"]
  }
}
