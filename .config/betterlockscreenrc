loginbox=00000066        # Black with some transparency (kept default)
loginshadow=00000000     # Transparent shadow
locktext="Type password to unlock..."
font="sans-serif"
ringcolor=2b2233ff       # Purple (#2b2233) for neutral ring
insidecolor=00000000     # Transparent inside (matches default)
separatorcolor=00000000  # Transparent separator
ringvercolor=C0FF98ff    # Green (#C0FF98) for verification ring
insidevercolor=00000000  # Transparent verification inside
ringwrongcolor=ff98b3ff  # Orange (#ff98b3) for wrong ring
insidewrongcolor=7f4c59ff # Orange (#7f4c59) for wrong inside
timecolor=EEEEECff       # Light gray (#EEEEEC) for time
time_format="%H:%M:%S"
greetercolor=EEEEECff    # Light gray (#EEEEEC) for greeter text
layoutcolor=EEEEECff     # Light gray (#EEEEEC) for layout
keyhlcolor=d598ffff      # Purple (#d598ff) for keypress highlight
bshlcolor=d598ffff       # Purple (#d598ff) for backspace highlight
veriftext="Verifying..."
verifcolor=767f4cff      # Green (#767f4c) for verification text
wrongtext="Failure!"
wrongcolor=FFD298ff      # Orange (#FFD298) for wrong text
modifcolor=EEEEECff      # Light gray (#EEEEEC) for modifier keys
bgcolor=000000ff         # Solid black background (#000000)

